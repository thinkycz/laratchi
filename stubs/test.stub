<?php

declare(strict_types=1);

namespace {{ namespace }};

use App\Models\User;
use Database\Factories\UserFactory;
use Illuminate\Foundation\Testing\RefreshDatabase;
use Tests\TestCase;

class {{ class }} extends TestCase
{
    use RefreshDatabase;

    /**
     * @dataProvider localeDataProvider
     */
    public function test_(string $locale): void
    {
        $this->locale($locale);

        $me = UserFactory::new()->createOne();

        \assert($me instanceof User);

        $query = [];
        $data = [];

        $response = $this->be($me, 'users')->post(resolveUrlFactory()->action(Controller::class, $query), $data);
        $response = $this->be($me, 'users')->get(resolveUrlFactory()->action(Controller::class, $query));

        $response->assertOk();
        $response->assertNoContent();
        $response->assertSuccessful();
        $response->assertStatus(422);

        $this->validateJsonApiResponse($response, $this->structure('resources'), [$this->structure('resources')]);
        $this->validateJsonApiCollectionResponse($response, [$this->structure('resources')], [$this->structure('resources')]);
        $this->validateJsonApiError($response, 400);
        $this->validateJsonApiValidationError($response, ['attribute']);
    }
}
